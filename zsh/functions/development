function goto () {
  working_directory=$1
  cd $working_directory

  session_name=`pwd | sed -n 's:\(^.*/Development/[^/]*/[^/]*\).*$:\1:p' | awk -F/ '{print $(NF-1) "/" $(NF)}'`
  if [ -z "$session_name" ]; then
    session_name='default'
  fi

  # test if session exist
  tmux has-session -t $session_name &> /dev/null
  # and create it if not
  if [ $? -ne 0 ]; then
    # create session and go to working directory
    TMUX= tmux new-session -s $session_name -n console -d

    # split first window
    tmux split-window -t $session_name -v -p 50 -d
    tmux split-window -t $session_name -h -p 50 -d

    # create another window with Vim
    tmux new-window -t $session_name -n editor
    tmux send-keys -t $session_name 'vim' C-m

    # select pane
    tmux select-window -t $session_name:1
    tmux select-pane -t $session_name -D
  fi

  # go back
  cd -

  # attach to session
  tmux switch-client -t $session_name &> /dev/null
  if [ $? -ne 0 ]; then
    tmux attach -t $session_name
  fi
}

function backend () {
  goto ~/Development/yalty/backend
}

function frontend () {
  goto ~/Development/yalty/frontend
}

function components () {
  goto ~/Development/yalty/frontend-components
}

function translations () {
  goto ~/Development/yalty/frontend-translations
}

function documentation () {
  goto ~/Development/yalty/documentation
}

function e2e () {
  goto ~/Development/yalty/e2e
}

function styleguide () {
  goto ~/Development/yalty/styleguide
}

function wordpress () {
  goto ~/Development/yalty/wordpress
}

function blueprint2slate () {
  goto ~/Development/yalty/blueprint2slate
}

function dotfiles () {
  goto ~/.dotfiles
}

function dev () {
  goto `pwd`
}
