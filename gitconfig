[user]
  name = Yann Lugrin
  email = yann.lugrin@antistatique.net

[alias]
  co = checkout
  ci = commit
  st = status
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  trust = !git branch > /dev/null && mkdir -p "$(git rev-parse --show-toplevel)/.git/safe" && echo "git repository is safe"
  bprune = !git branch --merged | grep -v '\\(master\\|dev\\|staging\\|production\\|stable\\)$\\|\\*' | xargs -n 1 git branch -d
  ignored = !git ls-files . --ignored --exclude-standard --others

[color]
  diff = auto
  status = auto
  branch = auto

[core]
  whitespace = space-before-tab,trailing-space,cr-at-eol,blank-at-eof
  autocrlf = input
  excludesfile = ~/.gitignore
  editor = vim

[apply]
  whitespace = fix

[push]
  default = upstream

[branch]
  autosetuprebase = always

[rebase]
  autosquash = true

[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
